
<h1>Transactions</h1>
<form method="post">
    <input type="number" name="accountId" placeholder="Enter account number..." />
    <input type="number" step="0.01" name="amount" placeholder="Enter amount..." />
    <button asp-controller="Bank" asp-action="Deposit">Deposit</button>
    <button asp-controller="Bank" asp-action="Witdraw">Withdraw</button>
</form>

@if  (TempData["Message"] != null )
{
<div>
    @TempData["Message"]
</div>
}